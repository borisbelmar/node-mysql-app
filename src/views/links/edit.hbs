<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-one-third is-offset-one-third">
                <div class="box">
                    <h2 class="title is-size-4 has-text-centered">Editando {{link.title}}</h2>
                    <hr>
                    <form action="/links/edit/{{link.id}}" method="POST"> 
                        <div class="field">
                            <label class="label">Título</label>
                            <div class="control">
                                <input type="text" value="{{link.title}}" class="input" name="title" placeholder="Write a title" required autofocus>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">URL</label>
                            <div class="control">
                                <input type="url" value="{{link.url}}" class="input" name="url" placeholder="Write an URL" required>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Descripción</label>
                            <div class="control">
                                <textarea class="textarea" name="description" rows="2" placeholder="Write a description">{{link.description}}</textarea>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary is-fullwidth">
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="field">
                    <div class="control">
                        <a href="/links" class="button is-white is-fullwidth">
                            Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>